<?xml version="1.0"?>
<form string="site" col="2">
    <notebook colspan="2">
        <page string="General" id="general">
            <label name="name"/>
            <field name="name"/>
            <label name="owner"/>
            <field name="owner"/>
            <label name="lot"/>
            <field name="lot"/>
            <label name="pefc"/>
            <field name="pefc"/>
            <label name="site_supervision"/>
            <field name="site_supervision"/>
            <label name="site_date"/>
            <field name="site_date"/>
            <label name="dead_line_work"/>
            <field name="dead_line_work"/>
            <label name="moa"/>
            <field name="moa"/>
            <label name="moe"/>
            <field name="moe"/>
            <label name="commune"/>
            <field name="commune"/>
            <label name="volume"/>
            <field name="volume"/>
            <label name="direccte"/>
            <field name="direccte"/>
            <field name="taxon" colspan="2"/>
            <field name="nature" colspan="2"/>           
            <button colspan="6" string="Edit geometries" name="site_edit" icon="tryton-executable" />
        </page>
        <page string="Codes" col="1" id="code">            
            <field name="voie"/>
            <field name="ouvrage"/>
            <field name="risque"/>            
        </page>               
        <page string="Map" col="1" id="map">                        
            <field name="situation_map" widget="image" img_width="1280" img_height="960" />
            <button string="Generate" name="situation_map_gen" icon="tryton-executable" />
        </page>
        <page string="Image" col="1" id="image">                        
            <field name="image_map" widget="image" img_width="1280" img_height="960" />
            <button string="Generate" name="image_map_gen" icon="tryton-executable" />
        </page>
        <page string="Misc. obj." id="misc_obj">
            <notebook colspan="1">
                <page string="Polygones" id="misc_obj_poly">
                    <field name="misc_obj_poly" />
                </page>
                <page string="Lines" id="misc_obj_line">
                    <field name="misc_obj_line" />
                </page>
                <page string="Points" id="misc_obj_point">
                    <field name="misc_obj_point" />
                </page>
            </notebook>
        </page>
    </notebook>
</form>
