from trytond.model import ModelView, ModelSQL, fields

__all__ = ['Suivi_eco']

class Suivi_eco(ModelSQL, ModelView):
    'Suivi_eco'
    __name__ = 'suivi_eco.suivi_eco'
    _rec_name = 'eco_dispositif'

    eco_dispositif = fields.Many2One('dispositif.dispositif', 'Dispositif', required=True, help='Dispositif')
    eco_suivi_den = fields.Boolean('Suivi dendrologique')
    eco_suiviecol = fields.Boolean(u'Suivi écologique')
    eco_miseajour = fields.Integer(u'Mise à jour', help=u'Année de la mise à jour')
    eco_depart = fields.Integer(u'Année départ')
    eco_rotation = fields.Integer('Rotation', help='Rotation coupe BO')
    eco_annees_bo = fields.Char(u'Années coupes BO')
    eco_annees_bi = fields.Char(u'Années coupes BI')
    eco_annees_chablis = fields.Char(u'Années coupes chablis')
    eco_annees_prev = fields.Char(u'Années coupes prévues')
