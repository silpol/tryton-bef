<?xml version="1.0"?>
<form string="Inventory" col="6">
    <notebook>
        <page string="General" id="general">
            <label name="mission" />
            <field name="mission" />
            <label name="name" />
            <field name="name" />                           
            <label name="date" />
            <field name="date" />
            <label name="party" />
            <field name="party" />
            <label name="species" />
            <field name="species"/>
            <label name="abundance" />
            <field name="abundance"/>            
            <label name="forest" />
            <field name="forest"/>
            <label name="town" />
            <field name="town"/>            
            <notebook>
                <page string="Comment" id="comment" col="2">                                    
                    <field name="comment" colspan="2"/>                    
                </page>
                <page string="Map" id="map" col="2">                                                        
                    <field name="image" colspan="1" widget="image" img_width="640" img_height="480"/>
                    <field name="image_map" colspan="1" widget="image" img_width="640" img_height="480"/>                         
                    <button string="Edit" name="inventory_edit" icon="tryton-executable" />
                    <button string="Generate" name="generate" icon="tryton-executable" />
                </page>
                <page string="Photo" id="photo" col="2">                                                        
                    <field name="photo" colspan="1" widget="image" img_width="640" img_height="480"/>                                             
                </page>
           </notebook>
           <label name="active" />
           <field name="active" />
        </page>                                               
    </notebook>                        
</form>
