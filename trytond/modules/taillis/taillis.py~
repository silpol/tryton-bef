from trytond.model import ModelView, ModelSQL, fields

__all__ = ['Taillis']

class Taillis(ModelSQL, ModelView):
    'Taillis'
    __name__ = 'taillis.taillis'
    _rec_name = 'tai_dispositif'

    tai_dispositif = fields.Many2One('dispositif.dispositif', 'Dispositif', required=True, help='Dispositif')
    tai_essence = fields.Many2One('essence.essence', 'Essence', required=True, help='Essence')
    tai_cycle = fields.Integer('Cycle', help='num du cycle')
    tai_placette = fields.Integer('Placette', help='Num de la placette')
    tai_quart = fields.Integer('Quart', help='Quart de la placette')
    tai_azimut = fields.Integer('Azimut')
    tai_distance = fields.Float('Distance', help='Distance en dm')
    tai_nombre = fields.Integer('Nombre', help='Nombre de brins')
    tai_diam_moy = fields.Integer(u'Diam√®tre moyen')
    tai_haut_moy = fields.Float('Hauteur moyenne')
    tai_observation = fields.Text('Observation')
