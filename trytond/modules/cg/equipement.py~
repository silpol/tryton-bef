#coding: utf-8
"""
GPLv3
"""

from trytond.model import ModelView, ModelSQL, fields

__all__ = ['road']


class road(ModelSQL, ModelView):
    u"""Road"""
    __name__ = 'road.road'
    _rec_name = 'name'

    class_id = fields.Integer(
            string = u"""Classe""",
            required = False,
            readonly = False,
        )

    length = fields.Float(
            string = u"""Longueur""",
            required = False,
            readonly = False,
        )

    name = fields.Char(
            string = u"""Nom""",
            required = False,
            readonly = False,
        )
        
    source = fields.Integer(
            string = u"""Source""",
            required = False,
            readonly = False,
        )
        
    target = fields.Integer(
            string = u"""Cible""",
            required = False,
            readonly = False,
        )        

    geom = fields.MultiLineString(string=u"""Geometry""", srid=2154,
            required=False, readonly=False, select=True)
