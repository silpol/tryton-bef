            <field name="typo" widget="selection"/>
            <label name="datecrea" />
            <field name="datecrea" />
            <label name="surfplot" />
            <field name="surfplot" />
            <label name="info" />
            <field name="info" colspan="3"/>
            <label name="opentime" />
            <field name="opentime" />
            <label name="closetime" />
            <field name="closetime" />
            <label name="horaire" />
            <field name="horaire" colspan="3"/>
            <label name="gestion" />
            <field name="gestion"/>
            <label name="contact" />
            <field name="contact" />
            <label name="presentation" />
            <field name="presentation" colspan="3" />
            <label name="acces" />
            <field name="acces" colspan="3" />
            <label name="active" />
            <field name="active" />
