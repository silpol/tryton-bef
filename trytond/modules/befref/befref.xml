<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.action.wizard" id="generate">
            <field name="name">Generate maps...</field>
            <field name="model">befref.area,-1</field>
            <field name="wiz_name">befref.generate</field>
        </record>
        <record model="ir.action.keyword" id="generate_all_kwd">
            <field name="keyword">form_action</field>
            <field name="model">befref.area,-1</field>
            <field name="action" ref="generate"/>
        </record>

        <record model="ir.action.report" id="report_avgarea">
            <field name="name">Average area report</field>
            <field name="model">befref.area</field>
            <field name="report_name">befref.avgarea</field>
            <field name="report">befref/befref.Rmd</field>
        </record>
        <record model="ir.action.keyword" id="report_avgarea_kwd">
            <field name="keyword">form_action</field>
            <field name="model">befref.area,-1</field>
            <field name="action" ref="report_avgarea"/>
        </record>

        <record model="ir.action.report" id="report_area_edit">
            <field name="name">Open in QGis...</field>
            <field name="model">befref.area</field>
            <field name="report_name">befref.area.qgis</field>
            <field name="report">qgis/befref.qgs</field>
        </record>
        <record model="ir.action.keyword" id="report_area_edit_kwd">
            <field name="keyword">form_action</field>
            <field name="model">befref.area,-1</field>
            <field name="action" ref="report_area_edit"/>
        </record>

        <record model="ir.ui.icon" id="befref_icon">
            <field name="name">tryton-befref</field>
            <field name="path">icons/work_in_progress.svg</field>
        </record>
        <record model="ir.ui.view" id="area_view_tree">
            <field name="model">befref.area</field>
            <field name="type">tree</field>
            <field name="name">area_tree</field>
        </record>

        <record model="ir.ui.view" id="area_view_form">
            <field name="model">befref.area</field>
            <field name="type">form</field>
            <field name="name">area_form</field>
        </record>

        <record model="ir.action.act_window" id="window_befref">
            <field name="name">BefRef Window</field>
            <field name="res_model">befref.area</field>
        </record>

        <record model="ir.action.act_window.view" id="view_befref_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="area_view_tree"/>
            <field name="act_window" ref="window_befref"/>
        </record>

        <record model="ir.action.act_window.view" id="view_befref_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="area_view_form"/>
            <field name="act_window" ref="window_befref"/>
        </record>

        <menuitem name="BefRef" parent="ir.menu_administration" id="menu_befref" icon="tryton-befref" action="window_befref"/>
    </data>
</tryton>
